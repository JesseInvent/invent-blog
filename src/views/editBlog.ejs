<div class="container">
  <div class="headerText text-center">
    <h4> <i class="fa fa-edit"></i> <i class="fa fa-blog"></i> Edit Blog</h4>
  </div>

  <form class="" action="/blogs/edit/<%= blog._id %>" method="POST">
    <%- include('./partials/messages.ejs') %>
    <div class="form-group">
      <label for="">Title</label>
      <input type="text" name="title" id="title" class="form-control"
      value="<%= blog.title %>">
    </div>

    <div class="form-group">
      <label for="">Body</label>
      <textarea name="body" class="form-control" rows="8" cols="80"><%= blog.body %></textarea>
    </div>

    <div class="form-group">
      <button type="submit" name="button" class="btn btn-primary">Update <i class="fa fa-edit"></i> </button>
    </div>

  </form>

</div>
